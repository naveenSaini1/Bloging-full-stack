<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <title>Create new blogs</title>
</head>
<body>
    <%- include('partials/navebar') -%>
    <div class="title"><h1>Create New Blogs</h1></div>
  <!-- admint page  -->

  <div class="container">
    <% data.reverse() %>
    <% data.forEach((e)=>{ %>
  <!-- Just an image -->
<nav class="navbar navbar-light bg-light admin-css">
  <div class="title">
    <p><%= e.title%></p>
  </div>
  <div class="btns">
    <a href="/new/read-more/<%=e.link%>" class="btn btn-primary">Read More</a>
    <a href="/new/del/<%=e.link%>" class="btn btn-danger">Del</a>  
    <a href="/new/edit/<%=e.link%>" class="btn btn-warning">edit</a>

  </div>


</nav>
<% })%>
</div>


<!-- form  -->
<div class="form-class">
<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Enter Image Url</label>
      <input type="file" class="form-control" id="exampleInputEmail1" name="img" aria-describedby="emailHelp">
    </div>

    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Title</label>
      <input type="text" class="form-control" name="title" id="exampleInputPassword1">
    </div>

    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Content</label>
        <textarea type="text" class="form-control" name="content" id="exampleInputPassword1" rows="10"> </textarea>
      </div>

    <button type="submit" class="btn btn-primary">Create</button>
  </form>

</div>

<!-- =========== -->


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>